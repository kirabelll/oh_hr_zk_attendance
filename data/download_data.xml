<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<!--	This cron job is responsible for downloading attendance at regular intervals.
 It is configured to run every 10 minutes.-->
	<record forcecreate="True" id="cron_download_data" model="ir.cron">
		<field name="name">Download Biometric Data</field>
		<field name="active" eval="True"/>
		<field name="user_id" ref="base.user_admin"/>
		<field name="interval_number">10</field>
		<field name="interval_type">minutes</field>
		<field name="numbercall">-1</field>	
		<field name="model_id" ref="model_zk_machine"/>
		<field name="state">code</field>
		<field name="code">model.cron_download()</field>
	</record>
</odoo>
